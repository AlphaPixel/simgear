
#ifndef __SGI_HXX
#define __SGI_HXX 1

#ifdef __cplusplus

#include <string>

inline bool
operator!=( const std::string& lhs, const char* rhs)
{
    return lhs.compare( rhs ) != 0;
}

inline bool
operator!=( const char* lhs, const std::string& rhs)
{
    return rhs.compare( lhs ) != 0;
}

inline bool
operator==( const std::string& lhs, const char* rhs)
{
    return lhs.compare( rhs ) == 0;
}

inline bool
operator==( const char* lhs, const std::string& rhs)
{
    return rhs.compare( lhs ) == 0;
}

inline std::string
operator+(const std::string& lhs, const char* rhs)
{
    return lhs + std::string(rhs);
}

inline std::string
operator+(const char* lhs, const std::string& rhs)
{
    return std::string(lhs) + rhs;
}

#endif /* __cplusplus */

#endif /* !__SGI_HXX */
