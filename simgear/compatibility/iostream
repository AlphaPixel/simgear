
#ifndef __SG_IOSTREAM
#define __SG_IOSTREAM 1

# include <fstream>

# if defined(sgi) && !defined(__GNUC__)

# include <iostream.h>

  class ios_base : public ios {
  public:

    typedef int  openmode;
    typedef int  seekdir;

    enum { binary = 0 };
  };

  namespace std {
    using ::cin;
    using ::cout;
    using ::cerr;
    using ::clog;
    using ::endl;

    using ::ios;
    using ::ios_base;
    using ::iostream;
    using ::istream;
    using ::ostream;

    using ::dec;
    using ::hex;
  };

# endif

#endif // !__SG_IOSTREAM

