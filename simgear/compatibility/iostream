
#ifndef __SG_IOSTREAM
#define __SG_IOSTREAM 1

# include <iostream.h>
# include <fstream.h>

#if defined(sgi) && !defined(__GNUC__)

  class ios_base : public ios {
  public:

    typedef int  openmode;
    typedef int  seekdir;

    enum { binary = 0 };
  };

  namespace std {
    using ::cin;
    using ::cout;
    using ::cerr;
    using ::clog;
    using ::endl;

    using ::ios_base;
    using ::istream;
    using ::ostream;

    using ::ifstream;
    using ::ofstream;
  };

#endif

#endif // !__SG_IOSTREAM

